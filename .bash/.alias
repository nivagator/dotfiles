##
# CD & List
cd() {
  builtin cd "$@" && ls
}

##
# A more descriptive, yet concise lsblk; you'll miss it when it's gone.
if [ -x /bin/lsblk ]; then
	alias lsblkid='\
		/bin/lsblk -o name,label,fstype,size,uuid,mountpoint --noheadings
	'
fi

